{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["babel", "prettier", "jest"],
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathSuffix": "src",
        "rootPathPrefix": "~"
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": 0,
    "comma-dangle": 0,
    "arrow-parens": 0,
    "no-unused-vars": 0,
    "no-throw-literal": 0,
    "camelcase": 0,
    "eqeqeq": 0,
    "no-plusplus": 0,
    "import/prefer-default-export": 0,
    "consistent-return": 0,
    "arrow-body-style": 0,
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "class-methods-use-this": 0,
    "no-nested-ternary": 0
  }
}
